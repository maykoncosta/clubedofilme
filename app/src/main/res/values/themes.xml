<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ClubeDoFilme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/CustomButton</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/baloo</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="CustomButtonStyle" parent="CustomButton">
        <item name="android:background">@drawable/button_custom</item>
    </style>

    <style name="CustomLogoutButtonStyle" parent="CustomButton">
        <item name="android:background">@drawable/button_logout</item>
        <item name="android:textColor">@color/logoutColor</item>
    </style>
</resources>
